{
  "env": {
    "mocha": true
  },
  "rules": {
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Feature",
          "Scenario",
          "Given",
          "When",
          "Then",
          "And",
          "But",
          "I",
          "System",
          "Describe"
        ]
      }
    ]
  },
  "globals": {
    "expect": false,
    "Feature": false,
    "Scenario": false,
    "Given": false,
    "When": false,
    "Then": false,
    "And": false,
    "But": false
  }
}
